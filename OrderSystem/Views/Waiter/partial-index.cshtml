<form class="container signin-form">
	<div class="text-center">
		<img class="img-index" src="/content/image/index.jpg" alt="">
	</div>
	
	<div class="form-group">
		<label for="username">用户名</label>
		<input type="text" class="form-control" id="username" name="username" ng-model="form.username">
	</div>
	<div class="form-group">
		<label for="password">密码</label>
		<input type="password" class="form-control" id="password" name="password" ng-model="form.password">
	</div>
	<button type="submit" class="btn btn-default btn-block" ng-click="submit()">登录</button>
	<button class="btn btn-default btn-block" close-button>关闭</button>
</form>